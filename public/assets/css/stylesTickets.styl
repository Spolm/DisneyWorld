html
	height 100%
	
body
	font-family: 'Raleway', sans-serif;
	height 100%
	background url(../Imagenes/Fondo.png) no-repeat center center fixed
	background-size cover
	
.navbar-default 
	background white
	
nav img
	width 200px
	margin-top 5px

.navbar-default .navbar-nav>li>a
	font-weight bold
	color #4c8cf8

h1,h2,h3,h4,h5,label,input
	font-weight bold
	
main
	background-color white
	min-height 100%
	margin-top 20px	
	margin-bottom 20px	
	margin-right 10%
	margin-left 10%
	padding-top 30px
	padding-bottom 30px
	border-radius: 10px 10px 10px 10px;
	-moz-border-radius: 10px 10px 10px 10px;
	-webkit-border-radius: 10px 10px 10px 10px;

.less,.more
	border-radius: 200px 200px 200px 200px;
	-moz-border-radius: 200px 200px 200px 200px;
	-webkit-border-radius: 200px 200px 200px 200px;
	border: 1px solid black;
	width 70px
	height 70px
	float left
	overflow hidden
	
.less:hover,.more:hover{
	border-color: #4c8cf8
	color: #4c8cf8
}
	
.less label, .more label
	font-weight normal
	
#selection-days .less label
	margin-top -45px
	margin-left 13px
	font-size 100px
	cursor pointer
	
#selection-days .more label
	margin-top -36px
	margin-left 13px
	font-size 100px
	cursor pointer

.clear
	clear: both;
	
#numbers
	width 70px
	height 70px	
	float left	
	font-size 40px
	text-align center
	margin-left 20px
	margin-right 20px

.counter
	width: 250px;
	
#selection-days .counter
	margin-left: auto;
	margin-right: auto;
	
#title
	text-align center

.subtitle-1
	text-aling left

.note
	text-aling left
	margin-left 25%
	margin-right 25%

.note-2
	text-aling left
	
#division
	height 1px
	width 80%
	background-color #b1afaf
	
#info
	z-index 3
	margin-left 40px

#info label
	display block
	font-size 17px

.days
	background-color #4c8cf8
	height 100px
	transition .3s
	width 5%
	margin-left 25%
	margin-right 25%
	margin-top 20px
	padding-top: 20px;
	border-radius: 25px 25px 25px 25px;
	-moz-border-radius: 25px 25px 25px 25px;
	-webkit-border-radius: 25px 25px 25px 25px;
	-webkit-box-shadow: 6px 6px 5px 0px rgba(214,214,214,1);
	-moz-box-shadow: 6px 6px 5px 0px rgba(214,214,214,1);
	box-shadow: 6px 6px 5px 0px rgba(214,214,214,1);
	
#selection-tickets #adult .less label
	margin-top -45px
	margin-left 13px
	font-size 100px
	cursor pointer
	
#selection-tickets #adult .more label
	margin-top -36px
	margin-left 13px
	font-size 100px
	cursor pointer
	
#selection-tickets #children .less label
	margin-top -29px
	margin-left 13px
	font-size 100px
	cursor pointer
	
#selection-tickets #children .more label
	margin-top -20px
	margin-left 13px
	font-size 100px
	cursor pointer
	
#big
	margin-top 20px
	float left

 #little
	margin-top 20px
	float right
	
#big h4, #little h4
	float left
	margin-top 25px
	margin-right 20px

#selection-tickets #children .counter
	float left
	
#selection-tickets #adult .counter
	margin-left auto
	margin-right auto

#date
	margin-left 25%
	margin-right 25%

.checkbox
	margin-left 25%
	margin-right 25%

.checkbox label
	font-weight bold

.counter label, .counter input
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
		
#selection-days,#selection-tickets,#selection-date,#conditions
	margin-left 10%
	margin-right 10%
	
.btn-primary
	background-color #4c8cf8	
	font-weight bold
	height 50px
	width 163px

.button
	margin-left auto
	margin-right auto
	font-weight bold	
	width 163px

@media all and (max-width: 1255px){
	#big{
		float none
		margin-right auto
		margin-left auto
		width 440px
	}

	#little{
		float none
		margin-right auto
		margin-left auto
		padding-left 70px
		width 440px
	}
}

@media all and (max-width: 676px){
	#big{
		width 250px
	}

	#little{
		padding-left 0px		
		width 250px
	}
	#big h4, #little h4{
		float none
	}
}

@media all and (max-width: 385px){
	.less,.more{
		width 40px
		height 40px
	}
	
	#selection-days .counter .less{
		padding-top: 15px;
	}
	
	#selection-days .counter .more{
		padding-top: 19px;
	}
	
	#selection-days .counter .less label{		
		font-size 40px
	}
	
	#selection-days .counter .more label{		
		font-size 40px
	}
	
	#selection-tickets #adult .less label{		
		font-size 40px
	}
	
	#selection-tickets #adult .more label{		
		font-size 40px
	}
	
	#selection-tickets #adult .less{
		padding-top: 16px;
	}
	
	#selection-tickets #adult .more{
		padding-top: 20px;
	}
	
	#selection-tickets #children .less label{		
		font-size 40px
	}
	
	#selection-tickets #children .more label{		
		font-size 40px
	}
	
	#selection-tickets #children .less{
		padding-top: 18px;
	}
	
	#selection-tickets #children .more{
		padding-top: 19px;
	}
	
	#numbers{
		width 40px
		height 40px	
		font-size 20px
	}
	
}